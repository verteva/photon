{
  "button": {
    "base": {
      "border": "1px solid {{colors.primary.100}}",
      "border-radius": "24px",
      "font-size": "{{font.semantic.h1.size}}",
      "letter-spacing": "0.05em",
      "disabled": {
        "border": "{{button.base.border}}"
      },
      "focus": {
        "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
        "outline": "none"
      },
      "hover": {
        "border": "{{button.base.border}}"
      }
    },
    "styles": {
      "primary": {
        "background": "linear-gradient(360deg, {{colors.primary.500}} 0%, {{colors.primary.400}} 100%)",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.white}}",
        "border-color": "{{colors.primary.500}}",
        "disabled": {
          "background": "{{colors.neutral.600}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.500}}"
        },
        "hover": {
          "background": "{{colors.black}}",
          "opacity": 0.2
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      },
      "primary-outline": {
        "background": "transparent",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.primary.500}}",
        "border-color": "{{colors.neutral.500}}",
        "disabled": {
          "background": "{{colors.neutral.600}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.500}}"
        },
        "hover": {
          "background": "{{colors.black}}",
          "color": "{{colors.neutral.800}}",
          "border-color": "{{colors.neutral.500}}",
          "opacity": 0.2
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      },
      "secondary": {
        "background": "linear-gradient(180deg, {{colors.white}} 0%, {{colors.neutral.300}} 100%)",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.neutral.800}}",
        "border-color": "{{colors.titanium}}",
        "disabled": {
          "background": "{{colors.white}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.300}}"
        },
        "hover": {
          "background": "{{colors.white}}",
          "color": "{{colors.primary.500}}",
          "border-color": "{{colors.primary.500}}",
          "opacity": 1
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      },
      "secondary-outline": {
        "background": "transparent",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.neutral.800}}",
        "border-color": "{{colors.neutral.500}}",
        "disabled": {
          "background": "{{colors.white}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.500}}"
        },
        "hover": {
          "background": "{{colors.white}}",
          "color": "{{colors.primary.500}}",
          "border-color": "{{colors.neutral.600}}",
          "opacity": 1
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      },
      "tertiary": {
        "background": "pink",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.neutral.800}}",
        "border-color": "{{colors.neutral.500}}",
        "disabled": {
          "background": "{{colors.white}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.500}}"
        },
        "hover": {
          "background": "{{colors.white}}",
          "color": "{{colors.primary.500}}",
          "border-color": "{{colors.neutral.600}}",
          "opacity": 1
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      },
      "tertiary-outline": {
        "background": "transparent",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.neutral.800}}",
        "border-color": "pink",
        "disabled": {
          "background": "{{colors.white}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.500}}"
        },
        "hover": {
          "background": "{{colors.white}}",
          "color": "{{colors.primary.500}}",
          "border-color": "{{colors.neutral.600}}",
          "opacity": 1
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      },
      "plain": {
        "background": "transparent",
        "border-radius": "{{button.base.border-radius}}",
        "color": "{{colors.neutral.800}}",
        "border-color": "transparent",
        "disabled": {
          "background": "{{colors.white}}",
          "color": "{{colors.neutral.500}}",
          "border-color": "{{colors.neutral.500}}"
        },
        "hover": {
          "opacity": 0,
          "border-color": "transparent"
        },
        "focus": {
          "box-shadow": "0px 0px 0px 6px rgba(0, 158, 222, 0.4)",
          "outline": "none"
        }
      }
    },
    "sizes": {
      "large": {
        "padding": "14px 26px",
        "font-size": "{{font.size.lg}}"
      },
      "medium": {
        "padding": "10px 20px",
        "font-size": "{{font.size.sm}}"
      },
      "small": {
        "padding": "6px 14px",
        "font-size": "{{font.size.xs}}"
      },
      "xs": {
        "padding": "4px 10px",
        "font-size": "{{font.size.xxs}}"
      }
    }
  }
}
